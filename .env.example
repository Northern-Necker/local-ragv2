# Azure Document Intelligence Configuration
# Get these values from Azure Portal -> Document Intelligence resource
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-key-here

# Vector Store Configuration
VECTOR_STORE_DIR=vector_store  # Directory for ChromaDB storage

# Model Configuration
GRAPHRAG_MODEL=microsoft/graphrag-base  # GraphRAG model name

# Chunking Configuration
MIN_MACRO_LENGTH=100  # Minimum length for macro chunks (in words)
MAX_MICRO_LENGTH=50   # Maximum length for micro chunks (in words)
OVERLAP_TOKENS=20     # Token overlap between chunks

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/app.log

# Development Configuration
DEBUG=false  # Set to true for development mode
TEST_DOCS_DIR=test_docs  # Directory for test documents
